package com.example.android.fragments;

//Kashyap Soni. 09/22/2017
//Android application for converting temperature
//either from Fahrenheit (째F) to Celsius (째C)
//or from Celsius (째C) to Fahrenheit (째F)

import android.support.v4.app.Fragment;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.Button;
import android.widget.EditText;
import android.widget.LinearLayout;
import android.widget.RelativeLayout;
import android.widget.TextView;

public class ArticleFragment extends Fragment {
    final static String ARG_POSITION = "position";
    int mCurrentPosition = -1;

    @Override
    public View onCreateView(LayoutInflater inflater, ViewGroup container, 
        Bundle savedInstanceState) {

        // If activity recreated (such as from screen rotate), restore
        // the previous article selection set by onSaveInstanceState().
        // This is primarily necessary when in the two-pane layout.
        if (savedInstanceState != null) {
            mCurrentPosition = savedInstanceState.getInt(ARG_POSITION);
        }

        // Inflate the layout for this fragment
        return inflater.inflate(R.layout.article_view, container, false);
    }



    public void updateArticleView(int position) {
       RelativeLayout article = (RelativeLayout) getActivity().findViewById(R.id.article);


        mCurrentPosition = position;


        if(position ==2)
        {
            Button button = (Button) article.findViewById(R.id.button);
            button.setVisibility(View.INVISIBLE);
            EditText editText = (EditText) article.findViewById(R.id.editText);
            editText.setVisibility(View.INVISIBLE);
            TextView textView = (TextView) article.findViewById(R.id.textView);

            textView.setText(Ipsum.Articles[position]);

        }




    }

        public void clickButton(View view)
        {
            if (mCurrentPosition == 0)
            {
                RelativeLayout article = (RelativeLayout) getActivity().findViewById(R.id.article);
                Button button = (Button) article.findViewById(R.id.button);
               // button.setVisibility(View.INVISIBLE);
                EditText editText = (EditText) article.findViewById(R.id.editText);
                String number = editText.getText().toString();
                int convertNumber = Integer.parseInt(number);

                double ans = (((convertNumber) * (9.0/5.0))+32.0);

                TextView textView = (TextView) article.findViewById(R.id.textView);
                textView.setText(String.format("Temperature %s (F)is %.2f (C)", convertNumber, ans));

            }

            else
            {
                RelativeLayout article = (RelativeLayout) getActivity().findViewById(R.id.article);
                Button button = (Button) article.findViewById(R.id.button);
                // button.setVisibility(View.INVISIBLE);
                EditText editText = (EditText) article.findViewById(R.id.editText);
                String number = editText.getText().toString();
                double convertNumber = Double.parseDouble(number);

                double ans = (convertNumber - 32.0) * (5.0/9.0);

                TextView textView = (TextView) article.findViewById(R.id.textView);
                textView.setText(String.format("Temperature %s (C)is %.2f (F)", convertNumber, ans));
                

            }

        }
    @Override
    public void onSaveInstanceState(Bundle outState) {
        super.onSaveInstanceState(outState);

        // Save the current article selection in case we need to recreate the fragment
        outState.putInt(ARG_POSITION, mCurrentPosition);
    }
}
